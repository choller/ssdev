	<artifactId>wettkampfmanager-project</artifactId>
	<name>WettkampfManager</name>
	<description>Management Programm f√ºr SSDeV Turniere</description>
	<version>1.0</version>
	<packaging>jar</packaging>
	<url>https://github.com/</url>
	<inceptionYear>2016</inceptionYear>
	<developers>
		<developer>
			<id>decoder</id>
			<name>Christian Holler</name>
			<email>decoder@own-hero.net</email>
			<url>http://users.own-hero.net/~decoder/</url>
			<timezone>2</timezone>
			<roles>
				<role>Developer</role>
			</roles>
		</developer>
	</developers>
